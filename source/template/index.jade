doctype html
html.no-js(lang='en', prefix='og:http://ogp.me/ns# profile:http://ogp.me/ns/profile#')
	head
		meta(charset='utf-8')
		title=content.website.title

		meta(name='description', content=content.website.description)
		meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')

		meta(property='og:title', content=content.website.title)
		meta(property='og:description', content=content.website.description)
		meta(property='og:url', content=content.self.address)
		meta(property='og:image', content='https:' + content.self.avatar + '?s=512')
		meta(property='og:type', content='profile')
		meta(property='profile:first_name', content=content.self.name.first)
		meta(property='profile:last_name', content=content.self.name.last)
		meta(property='profile:username', content='Thasmo')
		meta(property='profile:gender', content='male')

		meta(name='twitter:title', content=content.website.title)
		meta(name='twitter:description', content=content.website.description)
		meta(name='twitter:url', content='https:' + content.self.address + '?s=512')
		meta(name='twitter:image', content=content.self.avatar)
		meta(name='twitter:card', content='summary')
		meta(name='twitter:site', content='@thomasdeinhamer')

		meta(name='geo.position', content=content.self.location.position)
		meta(name='geo.placename', content=content.self.location.place)
		meta(name='geo.region', content=content.self.location.country)

		meta(property='fb:admins', content='1351449068')

		link(rel='canonical', href=content.self.address)

		link(rel='stylesheet', href='/static/style/main.css', inline)

		noscript
			link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700|Roboto+Slab:300,400')
			link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css')

		script(src='/static/script/main.js', inline)

		script.
			'use strict';
			window.loadCSS('//fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700|Roboto+Slab:300,400');
			window.loadCSS('//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css');

		<!--[if lte IE 9]>
		script(src='//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js')
		<![endif]-->

	body.page(id="✓")
		main.panel
			div.panel__content
				h1=content.self.name.first + ' ' + content.self.name.last

				section.section
					p: b Web-Developer from Salzburg, Austria.

				section.section
					h2.section__title Side Projects

					div.section__content
						each project in content.projects
							article.project
								h3.project__title
									a(href=project.address)=project.name
								p.project__description=project.description

				section.section
					h2.section__title Contact

					div.section__content
						each channel in content.channels
							p
								a.contact(href=channel.address)
									i.fa.fa-fw(class='fa-' + channel.icon)
									| #{channel.label}

		section.profile(itemscope='itemscope', itemtype='http://schema.org/Person')
			section.profile__figure
				img.profile__photo(itemprop='image', src=content.self.avatar + '?s=256', srcset=content.self.avatar + '?s=256 1x,' + content.self.avatar + '?s=512 2x', alt='Photo of ' + content.self.name.first + ' ' + content.self.name.last)
				a.profile__employer(href=content.employer.address)
					img(src=content.employer.avatar + '?s=256', srcset=content.employer.avatar + '?s=256 1x,' + content.employer.avatar + '?s=512 2x', alt='Logo of ' + content.employer.name)

			p.profile__quote
				| Curious all day,
				br
				| awake at night.

		aside.bar
			p.bar__social
				each channel in content.channels
					if channel.primary
						a.network(class='network--' + channel.type, href=channel.address, rel='me')
							i.fa(class='fa-' + channel.icon)

			a.bar__button.bar__button--on(href='#✓')
				i.fa.fa-circle-o

			a.bar__button.bar__button--off(href='#')
				i.fa.fa-dot-circle-o

		noscript
			iframe(src='//www.googletagmanager.com/ns.html?id=' + content.website.tracking.key, style='display:none;')

		script.
			(function(w,d,s,l,i){
				w[l]=w[l]||[];
				w[l].push({'gtm.start': new Date().getTime(),event:'gtm.js'});
				var f=d.getElementsByTagName(s)[0], j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;
				j.src='//www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
			})(window,document,'script','dataLayer','#{content.website.tracking.key}');
